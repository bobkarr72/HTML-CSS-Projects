{
"manifest_version": 2,
"name": "Chrome Text Clipper",
"version": "1.0",
"description": "Copy & paste text from the Web into a file of your choice!",
"permissions": [
    "activeTab",
    "storage"
],
"icons": {
    "256" : "icon.png"
},
"browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Text Clipper"
},
"background": {
    "scripts": [
        "background.js"
    ],
    "persistent": false
    }
}